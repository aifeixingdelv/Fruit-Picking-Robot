<?xml version="1.0"?>
<launch>
	<!-- roslaunch this file will auto start the roscore -->	
		
	<!--<arg name="model" />-->
	<arg name="gui" default="False" />

	<param name="robot_description" textfile="$(find dashan_description)/urdf/dashan_demo.xacro" />
	
	<param name="use_gui" value="$(arg gui)"/>


	<!-- no need to use joint_state_publisher and robot_state_publisher, because we don't have dynamic frames.
	     All frames of urdf is fixed (static). -->
<!--
	<node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />
	<node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher" >
		<param name="publish_frequency" value="50.0"/>
	</node>
-->

	<!-- use static tf publisher to publish our tf tree  -->
	
	<node pkg="tf" type="static_transform_publisher" name="footprint_baselink_tf_publisher" args="0 0 0 0 0 0 base_footprint base_link 20" />
	<!--
	<node pkg="tf" type="static_transform_publisher" name="baselink_camera_tf_publisher" args="0.2 0 0.05 0 0 0 base_link camera_link 20" />
	-->
        <!--
	<node pkg="tf" type="static_transform_publisher" name="baselink_scan_tf_publisher" args="0.16 0 0.23 3.1415926 0 0 base_link scan 20" />
        -->
    <node pkg="tf" type="static_transform_publisher" name="baselink_scan_tf_publisher" args="0.25 0 0.19 0 0 0 base_link scan 20" />
	<node pkg="tf" type="static_transform_publisher" name="baselink_wheel1_tf_publisher" args="0.15 0.1875 -0.0205 0 0 0 base_link wheel_1 100" />
	<node pkg="tf" type="static_transform_publisher" name="baselink_wheel2_tf_publisher" args="-0.15 0.1875 -0.0205 0 0 0 base_link wheel_2 100" />
	<node pkg="tf" type="static_transform_publisher" name="baselink_wheel3_tf_publisher" args="0.15 -0.1875 -0.0205 0 0 0 base_link wheel_3 100" />
	<node pkg="tf" type="static_transform_publisher" name="baselink_wheel4_tf_publisher" args="-0.15 -0.1875 -0.0205 0 0 0 base_link wheel_4 100" />
	
	<!--
	<node pkg="tf" type="static_transform_publisher" name="baselink_rgb_tf_publisher" args="0.18 0 0.05 0 0 0 base_link camera_rgb_frame 20" />
	
	
	<node pkg="tf" type="static_transform_publisher" name="rgb_depth_tf_publisher" args="0 0.025 0 0 0 0 camera_rgb_frame camera_depth_frame 20" />
     -->


</launch>
