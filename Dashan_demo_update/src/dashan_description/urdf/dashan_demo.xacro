 <link name="mynteye_link_frame">
    		<visual>
      			<geometry>
                               <box size="0.165 0.0315 0.0296"/>
			</geometry>
                        <material name="white">
                          <color rgba="1 1 1 .5" />
                        </material>
                        <origin rpy="0 0 1.57079632679" xyz="0 0 0"/>
    		</visual>	
 </link>
  	
 <joint name="base_to_wheel1" type="continuous">
   <parent link="base_link"/>
   <child link="wheel_1"/>
   <origin rpy="1.57075 0 0" xyz="0.24 0.305 -0.1205"/>
   <axis xyz="0 0 1" />
 </joint>

 <joint name="base_to_wheel2" type="continuous">
   <parent link="base_link"/>
   <child link="wheel_2"/>
   <origin rpy="1.57075 0 0" xyz="-0.24 0.305 -0.1205"/>
   <axis xyz="0 0 1" />
</joint>

 <joint name="base_to_wheel3" type="continuous">
   <parent link="base_link"/>
   <child link="wheel_3"/>
   <origin rpy="1.57075 0 0" xyz="0.24 -0.305 -0.1205"/>
   <axis xyz="0 0 1" />
 </joint>

 <joint name="base_to_wheel4" type="continuous">
   <parent link="base_link"/>
   <child link="wheel_4"/>
   <origin rpy="1.57075 0 0" xyz="-0.24 -0.305 -0.1205"/>
    <axis xyz="0 0 1" />
 </joint>

