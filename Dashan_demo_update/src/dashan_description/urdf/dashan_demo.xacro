  <joint name="mynteye_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0.36225 0.0025 0.1402"/>
    <parent link="base_link"/>
    <child link="mynteye_link_frame"/>
 </joint>
 
</robot>
